<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Library App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Main">
                <img src="~/Content/images/logo.png" width="30" height="30" class="d-inline-block align-text-top" />  Library App
            </a>
        </div>
    </div>
    <div class="body-content container-fluid">
        <div class="row">
            <div class="col-md-10">
                @RenderBody()
            </div>
            <div class="col-md-2">
                <div class="navbar">
                    <ul class="nav nav-pills flex-column col">
                        <li class="nav-item">@Html.ActionLink("Articles", "Index", "Article", new { area = "" }, new { @class = "nav-link" + 
                                             ((ViewContext.RouteData.Values["Controller"].ToString() == "Article") ? (" active") : ("")) })</li>
                        <li class="nav-item">@Html.ActionLink("Guest", "Index", "Feedback", new { area = "" }, new { @class = "nav-link" +
                                             ((ViewContext.RouteData.Values["Controller"].ToString() == "Feedback") ? (" active") : ("")) })</li>
                        <li class="nav-item">@Html.ActionLink("Questionnaire", "Index", "Question", new { area = "" }, new { @class = "nav-link" +
                                             ((ViewContext.RouteData.Values["Controller"].ToString() == "Question") ? (" active") : ("")) })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Library App</p>
        <p>Created by Roman Demkiv - demkiv.xcix@gmail.com</p>
        <a href="#top">Back to top of page</a>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
